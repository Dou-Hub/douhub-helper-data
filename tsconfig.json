  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2015"]
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}
